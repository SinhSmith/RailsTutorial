<div class="panel panel-default">
    <div class="panel-heading">
        <h4>New User</h4>
    </div>
    <div class="panel-body">
        <%= render 'form', user: @user %>
    </div>
</div>

<div class="panel panel-default">
    <div class="panel-heading">
        <h4>Import a CSV File</h4>
    </div>
    <div class="panel-body">
        <%= form_tag import_users_path, :class => 'form-horizontal', multipart: true do %>
          <div class="form-group">
              <%= label_tag "CSV file", nil, :class => "col-sm-2" %>
              <div class="col-sm-10">
                  <%= file_field_tag :file, :class => "" %>
              </div>
          </div>
          <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
              <%= submit_tag "Import CSV", :class => "btn btn-primary" %>
            </div>
          </div>
        <% end %>
    </div>
</div>

<%= link_to 'Back', users_path, :class => "btn btn-default" %>
